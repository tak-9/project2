<section class="hero">
    <div class="hero-body">
        <div class="container">
            <div class="field is-grouped logout">
                <div class="control">
                    <button class="button">Logout</button>
                </div>
            </div>
            <h1 class="title">
                Proficiency Education
            </h1>

        </div>
    </div>

</section>

<div class="container">
    <div class="columns">
        <div class="column is-one-quarter">
            <aside class="menu">

                <p class="menu-label">
                    Student Menu
                </p>
                <ul class="menu-list">
                    <li><a id="studentDetailBtn">Student Details</a></li>
                    <li><a id="quizResultBtn">View past quiz results</a></li>
                </ul>

            </aside>


        </div>
        <div id="quizResults" class="column is-three-quarter hide">
            <label class="classheading">Choose a class:</label>
            <p class="control">
                <span class="select">
                    <select>
                        {{#each class}}
                        <option>
                            {{classes}}
                        </option>
                        {{/each}}
                    </select>
                </span>
            </p>
            <br>
            <br>
            <table class="table">

                <thead>
                    <tr>
                        <th>Week</th>
                        <th>Marks</th>
                        <th>Full Marks</th>
                    </tr>
                </thead>
                {{#each student}}
                <tr>
                    <td>{{week}}</td>
                    <td>{{quizMarks}}</td>
                    <td>{{fullMarks}}</td>
                </tr>
                {{/each}}
            </table>
        </div>
        <div id="studentDetails" class='column is-three-quarter show '>
            <h3 class="title">
                Student Details
            </h3>
            <div class="field">
                <label class="label">Email (username)</label>
                <p>{{student.email}}</p>
            </div>

            <div class="field">
                <label class="label">First Name</label>
                <p>{{student.name}}</p>
            </div>
            <div class="field">
                <label class="label">Mobile</label>
                <p>{{student.phone}}</p>
            </div>
            <div class="field">
                <label class="label">Date of Birth</label>
                <p>{{student.bithdate}}</p>
            </div>
            <div class="field">
                <label class="label">Address</label>
                <p>{{student.address}}</p>
            </div>
        
            <div class="field">
                <label class="label">School</label>
                <p>{{student.school}}</p>
            </div>

            <div class="field">
                <label class="label">Year Group</label>
                <p>{{student.yeargroup}}</p>
            </div>



            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Edit</button>
                </div>

            </div>
        </div>


        <div id="guardianDetails" class="column is-three-quarter hide ">
            <br>
            <h3 class="title">
                Guardian Details
            </h3>
            <div class="field">
                <label class="label">Email</label>
                <p>{{parent.email}}</p>
            </div>

            <div class="field">
                <label class="label">Name</label>
                <p>{{parent.name}}</p>
            </div>
            <div class="field">
                <label class="label">Mobile</label>
                <p>{{parent.phone}}</p>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Edit</button>
                </div>
            </div>
        </div>

    </div>


    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="../JS/scriptstudent.js"></script>